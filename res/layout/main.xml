                        android:layout_gravity="bottom" >
                    </ImageView>
                    <ImageView
                        android:id="@+id/p1c9"
        				android:layout_toRightOf="@+id/p1c8" 
        				android:layout_marginLeft="-5dp" 
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom" >
                    </ImageView>
                    <ImageView
                        android:id="@+id/p1c10"
        				android:layout_toRightOf="@+id/p1c9" 
        				android:layout_marginLeft="-5dp" 
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom" >
                    </ImageView>
                    <ImageView
                        android:id="@+id/p1c11"
        				android:layout_toRightOf="@+id/p1c10" 
        				android:layout_marginLeft="-5dp" 
                        android:layout_width="60dp"
